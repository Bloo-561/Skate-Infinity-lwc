<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Hero</masterLabel>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property 
                name="intRes"
                type="Boolean"
                label="Internal Resource"
                description="Internal or External resource use"
                default="true"
            />
            <property
                name="resourceUrl"
                type="String"
                label="Resource URL"
                description="Where to get resource from"
                default="/Sunset.jpg"
            />
            <property
                name="imgOrVideo"
                type="String"
                label="Resource Type"
                description="Where to show an image or a video"
                datasource="Image,Video"
                default="Image"
            />
            <property
                name="title"
                type="String"
                label="Title"
                default="Skate âˆž"
            />
            <property
                name="subText"
                type="String"
                label="Sub Text"
                default="Find Your Passion"
            />
            <property
                name="buttonText"
                type="String"
                label="Button Text"
                default="Skate Shop"
            />
            <property
                name="heroPosition"
                type="String"
                label="Hero Text Position"
                datasource="apex://HeroPositionCustomPicklist"
            />
            <property
                name="buttonToStore"
                type="String"
                label="Button Click To Store"
                description="Navigate to Product List"
                default="Test"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>